# UGOKI API Environment Variables
# Copy this to .env and fill in your values

# Application
DEBUG=true

# Database
# SQLite (simple, no setup): DATABASE_URL=sqlite+aiosqlite:///./ugoki.db
# PostgreSQL Docker: docker run -d --name ugoki-pg -e POSTGRES_PASSWORD=dev -p 5432:5432 postgres:16
DATABASE_URL=postgresql+asyncpg://postgres:dev@localhost:5432/postgres

# PostgreSQL connection pool settings (ignored for SQLite)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30

# Security (CHANGE IN PRODUCTION!)
JWT_SECRET=change-me-in-production-use-a-long-random-string

# AI Provider: ollama (free/local), groq (free tier), anthropic, openai, mock
AI_PROVIDER=ollama

# Ollama (free, local) - Install from https://ollama.ai
# Then run: ollama pull llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Groq (free tier) - Get key from https://console.groq.com
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# Anthropic (paid) - Only if using Claude
ANTHROPIC_API_KEY=

# OpenAI (paid)
OPENAI_API_KEY=

# External Services (optional for MVP)
LOGFIRE_TOKEN=
RESEND_API_KEY=
EXPO_ACCESS_TOKEN=
